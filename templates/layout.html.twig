<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}{% trans %}site.titre{% endtrans %}{% endblock %}</title>

    {% block stylesheets %}
        {# On charge le CSS de bootstrap depuis le site directement #}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% endblock %}
</head>

<body>
<div class="container">
    <div id="header" class="jumbotron">
        <h1>
        {% trans %}site.titre{% endtrans %}</h1>
        <p>
            {%   if app.user==false %}
        <form method="get" action="{{ path('security_login' ) }}">
            <button type="submit">{% trans %}signin{% endtrans %}</button>
        </form>
        <form method="get" action="{{ path('user_registration' ) }}">
            <button type="submit">{% trans %}signup{% endtrans %}</button>
        </form>
        {%  else %}
            <form method="get" action="{{ path('app_logout' ) }}">
                <button type="submit">{% trans %}disconnection{% endtrans %}</button>
            </form>
        {% endif %}
        </p>
    </div>
    <div class="row">
        <div id="menu" class="col-md-3">

            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('app_home') }}">{% trans %}site.accueil.lien{% endtrans %}</a></li><br/><br/>
                {% if is_granted('ROLE_AUTEUR') %}
                <li><a href="{{ path('app_article_add') }}">{% trans %}site.create.article{% endtrans %}</a></li>
                {% endif %}
            </ul>


        </div>
        <div id="content" class="col-md-9">

            {% block body %}
                {% block categorie%}
                <h1>{% trans %}site.accueil.presentation.titre{% endtrans %}</h1>
                {% endblock %}
                <hr>
                {% block contenu %}
                    {% trans %}site.accueil.presentation.contenu{% endtrans %}
                {% endblock %}

            {% endblock %}
        </div>s
    </div>
    <hr>

    <footer>
        <p>Alexandre Pommarat / +33 7 81 14 55 12 / {% trans %}site.footer{% endtrans %}</p>
    </footer>
</div>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalit√©s du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
{% endblock %}

</body>
</html>

