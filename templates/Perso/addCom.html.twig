{% extends "layout.html.twig" %}

{% block title %}
    Ajouter un Personnage - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

    <h2>Ajouter un personnage</h2>

    <div class="well">

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}


        {# Génération manuelle et éclatée : #}
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.author, "Votre Pseudo", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}


            <div class="col-sm-10">
                {# Génération de l'input. #}
                {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {# Idem pour un autre champ. #}
        <div class="form-group">
            {{ form_label(form.note, "Note", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.note) }}
            <div class="col-sm-10">
                {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.content, "Commentaire", {'label_attr': {'class': 'col-sm-2 control-label'}}, min=0, max=10) }}
            {{ form_errors(form.content) }}
            <div class="col-sm-10">
                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>



        {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}

        {{ form_rest(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    </div>

    <p>
        Attention : ce personnage sera ajoutée directement
        sur la page d'accueil après validation du formulaire.
    </p>



{% endblock %}