{% extends "layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

    <h2>Liste des personnages</h2>

    <ul>
        {% for advert in listAdverts %}
            <li>
                <a href="{{ path('app_character_details', {'id': advert.id}) }}">
                    {{ advert.title }} -> {{ advert.Firstname }}
                </a>
            </li>

        {% endfor %}
    </ul>

{% endblock %}
